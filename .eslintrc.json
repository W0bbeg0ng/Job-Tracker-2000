{
  "env": {
      "browser": true,
      "commonjs": true,
      "es2021": true,
      "node": true
  },
  "extends": [
      "plugin:react/recommended",
      "eslint:recommended"
  ],
  "parserOptions": {
      "ecmaFeatures": {
          "jsx": true
      },
      "ecmaVersion": "latest"
  },
  "plugins": [
      "react"
  ],
  "rules": {
      "indent": ["warn", 2],
      "no-unused-vars": ["off", { "vars": "local" }],
      "no-case-declarations": "off",
      "prefer-const": "warn",
      "quotes": ["warn", "single"],
      "react/prop-types": "off",
      "semi": ["warn", "always"],
      "space-infix-ops": "warn"
  }
}

